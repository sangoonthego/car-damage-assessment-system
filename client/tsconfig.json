{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",        // để TS hiểu JSX
    "allowJs": true,           // <-- cho phép TS đọc file .js/.jsx
    "checkJs": false,          // tùy chọn, nếu không muốn TS check type file JS
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    //"allowImportingTsExtensions": true,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": ["src"]
}
